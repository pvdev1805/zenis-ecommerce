doctype html
html(
  data-bs-theme="light" 
  data-startbar="light" 
  dir="ltr" 
  lang="en"
  )
  head
    script.
      const pathAdmin = "#{pathAdmin}";
    meta(charset="utf-8")
    title #{pageTitle}
    meta(
      content="width=device-width, initial-scale=1, shrink-to-fit=no" 
      name="viewport"
      )
    meta(
      name="description" 
      content="Premium Multipurpose Admin & Dashboard Template"
      )
    meta(
      name="author" 
      content=""
      )
    meta(
      content="IE=edge" 
      http-equiv="X-UA-Compatible"
      )
    // App favicon
    link(
      href="/admin/assets/images/favicon.ico" 
      rel="shortcut icon"
      )
    // Notyf CSS
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css"
      )
    // App css
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/bootstrap.min.css"
      )
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/icons.min.css"
      )
    link(
      type="text/css" 
      rel="stylesheet" 
      href="/admin/assets/css/app.min.css"
      )
  // Top Bar Start
  body
    // Top Bar Start
    include ../partials/topbar.pug
          
    // Top Bar End
    // leftbar-tab-menu
    include ../partials/startbar.pug
    // end leftbar-tab-menu
    .page-wrapper
      // Page Content
      .page-content
        .container-xxl
          //- Main
          block main 
          //- End - Main
        // container
        // Start Footer
        include ../partials/footer.pug
        // end footer
      // end page content
    // end page-wrapper
    // Javascript
    // vendor js
    script(src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js")
    script(src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js") 
    script(src="/admin/assets/libs/bootstrap/js/bootstrap.bundle.min.js")
    script(src="/admin/assets/libs/simplebar/simplebar.min.js")

    block script 

    script(src="/admin/assets/js/app.js")
    script(src="/admin/assets/js/main.js")
  // end body